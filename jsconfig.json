{
  "compilerOptions": {
    "checkJs": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "target": "esnext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "lib",
    "noEmit": false,
    "module": "esnext",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
